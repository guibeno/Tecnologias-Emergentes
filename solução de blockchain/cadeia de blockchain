def product_key():
    print('\nüì¶ Qual produto vai ser selecionado:')
    print(f'products')
    for i in products:
        print(f"{i['unique_id']} - {i['name']}")
    valor = int(input('Insira o valor: '))
    if not (1 <= valor <= len(products)):
        raise ValueError("Produto inv√°lido.")
    id_product = products[valor - 1]['id']
    horario = datetime.now().isoformat()
    id_product += (str(horario)) 
    

    return id_product 


def distributors_key(produto_id):
    print('\nüöö Qual entregar vai ser selecionada:')
    print(f'distribuidores')
    for i in distributors:
        print(f"{i['unique_id']} - {i['name']}")
    valor = int(input('Insira o valor: '))
    if not (1 <= valor <= len(distributors)):
        raise ValueError("Produto inv√°lido.")
    id_distributors = distributors[valor - 1]['id']
    horario = datetime.now().isoformat()
    id_distributors += (str(horario)) + ' - ' + produto_id 
   
    return id_distributors


def sellers_key(distributors):
    print('\nüè™ Onde a venda foi realizada:')
